    "@types/jest": "^29.5.14",
    "@types/node": "^22.14.1",
    "@typescript-eslint/eslint-plugin": "^8.29.1",
    "@typescript-eslint/parser": "^8.29.1",
    "chalk": "^4.1.2",
    "eslint": "^8.57.1",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jest": "^28.11.0",
    "eslint-plugin-jest-mock-config": "^1.0.0-beta.9",
    "jest": "^29.7.0",
    "shx": "^0.4.0",
    "ts-jest": "^29.3.1"
  }
