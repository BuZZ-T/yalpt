{
  "name": "yalpt",
  "version": "0.0.1-alpha.0",
  "description": "Yet another logging-progress tool",
  "main": "public_api.js",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "lint": "eslint **/*.ts *.ts",
    "test": "echo \"Error: no test specified\" && exit 1",
